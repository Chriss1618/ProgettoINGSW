<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:paddingLeft="8dp"
    android:paddingTop="8dp"
    android:paddingRight="8dp"
    android:paddingBottom="8dp"
    tools:context=".Schermate.Activity_Login">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="124dp"
            android:layout_height="43dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/sf_compact_rounded_bold"
            android:text="Modifica"
            android:textColor="@color/Black"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/account_image"
            android:layout_width="128dp"
            android:layout_height="wrap_content"

            android:layout_marginStart="124dp"
            android:layout_marginTop="18dp"
            app:circularflow_radiusInDP="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_marginTop="226dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="135dp"
            app:layout_constraintBottom_toTopOf="@+id/imageView8"
            app:layout_constraintEnd_toStartOf="@+id/editTextTextPersonName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:srcCompat="@drawable/name_surname" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="135dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/editTextTextRestaurantName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView9"
            app:srcCompat="@drawable/restaurant_name" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/editTextTextPostalAddress"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView10"
            app:srcCompat="@drawable/restaurant_address" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="27dp"

            android:layout_height="27dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/editTextPhone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView8"
            app:srcCompat="@drawable/number" />

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="17dp"
            app:layout_constraintEnd_toStartOf="@+id/textView9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView11"
            app:srcCompat="@drawable/table_number" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="43dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="200dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/sf_compact_rounded_bold"
            android:text="Informazioni AttivitÃ "
            android:textColor="@color/Black"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/editTextTextRestaurantName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName2" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="43dp"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/sf_compact_rounded_bold"
            android:text="Informazioni personali"
            android:textColor="@color/Black"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/editTextTextPersonName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/account_image" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="Numero Tavoli:"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextPostalAddress"
            tools:layout_editor_absoluteX="60dp" />

        <Button
            android:id="@+id/edit_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="127dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="127dp"
            android:background="@drawable/background_button_main"
            android:fontFamily="@font/sf_compact_rounded_bold"
            android:paddingLeft="24dp"
            android:paddingTop="5dp"
            android:paddingRight="24dp"
            android:paddingBottom="5dp"
            android:text="MODIFICA"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView9" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:srcCompat="@drawable/edit_photo"
            tools:layout_editor_absoluteX="226dp"
            tools:layout_editor_absoluteY="218dp" />

        <EditText
            android:id="@+id/editTextTextPersonName"
            android:layout_width="292dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="1dp"
            android:background="@drawable/background_edit_text_stroke"
            android:ems="10"
            android:hint="Nome"
            android:inputType="textPersonName"
            android:paddingStart="16dp"
            android:textColorLink="@color/MainColor"
            android:textCursorDrawable="@color/MainColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView9"
            app:layout_constraintTop_toBottomOf="@+id/textView7"
            tools:textStyle="normal" />

        <EditText
            android:id="@+id/editTextTextPersonName2"
            android:layout_width="292dp"
            android:layout_height="40dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/background_edit_text_stroke"
            android:ems="10"
            android:hint="Cognome"

            android:inputType="textPersonName"
            android:paddingStart="16dp"
            android:textColorLink="@color/MainColor"
            android:textCursorDrawable="@color/MainColor"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName"
            tools:layout_editor_absoluteX="51dp" />

        <EditText
            android:id="@+id/editTextTextPostalAddress"
            android:layout_width="292dp"
            android:layout_height="40dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/background_edit_text_stroke"
            android:ems="10"
            android:hint="Indirizzo"
            android:inputType="textPostalAddress"
            android:paddingStart="16dp"
            android:textColorLink="@color/MainColor"
            android:textCursorDrawable="@color/MainColor"
            app:layout_constraintTop_toBottomOf="@+id/editTextPhone"
            tools:layout_editor_absoluteX="51dp" />

        <EditText
            android:id="@+id/editTextPhone"
            android:layout_width="292dp"
            android:layout_height="40dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/background_edit_text_stroke"
            android:ems="10"
            android:hint="Numero di telefono"

            android:inputType="phone"
            android:paddingStart="16dp"
            android:textColorLink="@color/MainColor"
            android:textCursorDrawable="@color/MainColor"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextRestaurantName"
            tools:layout_editor_absoluteX="51dp" />

        <EditText
            android:id="@+id/editTextTextRestaurantName"
            android:layout_width="292dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/background_edit_text_stroke"
            android:ems="10"

            android:hint="Nome ristorante"
            android:paddingStart="16dp"
            android:textColorLink="@color/MainColor"
            android:textCursorDrawable="@color/MainColor"
            app:layout_constraintStart_toEndOf="@+id/imageView8"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <EditText
            android:id="@+id/editTextTextPersonName4"
            android:layout_width="56dp"
            android:layout_height="40dp"
            android:layout_marginStart="6dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="7dp"
            android:layout_marginBottom="109dp"
            android:background="@drawable/background_edit_text_stroke"
            android:ems="10"
            android:paddingStart="16dp"
            android:textColorLink="@color/MainColor"
            android:textCursorDrawable="@color/MainColor"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imageView6"
            app:layout_constraintStart_toEndOf="@+id/imageView13"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextPostalAddress"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="31dp"
            android:layout_marginEnd="38dp"
            android:layout_marginBottom="118dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/editTextTextPersonName4"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextPostalAddress"
            app:layout_constraintVertical_bias="0.013"
            app:srcCompat="@drawable/orange_plus" />

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="26dp"
            android:layout_marginTop="31dp"
            android:layout_marginEnd="6dp"
            android:layout_marginBottom="38dp"
            app:layout_constraintBottom_toTopOf="@+id/edit_account"
            app:layout_constraintEnd_toStartOf="@+id/editTextTextPersonName4"
            app:layout_constraintStart_toEndOf="@+id/textView9"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextPostalAddress"
            app:srcCompat="@drawable/orange_minus" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>