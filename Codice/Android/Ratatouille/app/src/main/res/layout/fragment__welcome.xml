<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Views.Schermate.Login.Fragment.Fragment_Welcome"
    android:background="@color/MainColor">



    <LinearLayout
        android:id="@+id/background"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/circle"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_view_welcome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginTop="150dp"
        android:fontFamily="@font/sf_compact_rounded_bold"
        android:gravity="center"
        android:text="@string/benvenuto"
        android:textColor="@color/white"
        android:textSize="50sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <android.widget.Button
        android:id="@+id/button_new_amministratore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"

        android:layout_marginBottom="64dp"

        android:background="@drawable/background_button_white"
        android:drawableEnd="@drawable/ic_arrow_forward_white"
        android:fontFamily="@font/sf_compact_rounded"
        android:paddingStart="36dp"
        android:paddingTop="16dp"

        android:paddingEnd="32dp"
        android:paddingBottom="13dp"
        android:text="@string/registra_il_tuo_ristorante"
        android:textColor="@color/MainColor"

        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <android.widget.Button
        android:id="@+id/button_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"

        android:layout_marginBottom="32dp"
        android:background="@drawable/background_button_white"
        android:drawableEnd="@drawable/ic_arrow_forward_white"
        android:fontFamily="@font/sf_compact_rounded"
        android:paddingStart="36dp"

        android:paddingTop="16dp"
        android:paddingEnd="32dp"
        android:paddingBottom="13dp"
        android:text="@string/accedi"

        android:textColor="@color/MainColor"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/button_new_amministratore"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/image_view_logo"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:contentDescription="@string/imagine_logo"
        android:src="@mipmap/ratatouille"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>

