<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/MainColor"
    tools:context=".Views.Schermate.Activity_ChooseRole">
    <LinearLayout
        android:id="@+id/background"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:background="@drawable/circle"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.widget.Button
            android:id="@+id/button_amministratore"
            android:layout_width="250dp"
            android:layout_height="wrap_content"

            android:layout_margin="32dp"

            android:autoSizeMaxTextSize="25sp"
            android:autoSizeMinTextSize="12sp"
            android:autoSizeStepGranularity="1sp"
            android:autoSizeTextType="uniform"
            android:background="@drawable/background_button_main"

            android:drawableEnd="@drawable/ic_arrow_forward"
            android:fontFamily="@font/sf_compact_rounded"
            android:maxLines="1"
            android:paddingStart="36dp"
            android:paddingTop="16dp"
            android:paddingEnd="32dp"
            android:paddingBottom="13dp"
            android:text="Amministratore"
            android:textColor="@color/white"
            android:textSize="18sp"

            android:textStyle="bold"

            />

        <android.widget.Button
            android:id="@+id/button_supervisore"
            android:layout_width="250dp"
            android:layout_height="wrap_content"

            android:layout_margin="32dp"

            android:background="@drawable/background_button_main"
            android:drawableEnd="@drawable/ic_arrow_forward"
            android:fontFamily="@font/sf_compact_rounded"
            android:paddingStart="36dp"
            android:paddingTop="16dp"

            android:paddingEnd="32dp"
            android:paddingBottom="13dp"
            android:text="Supervisore"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <android.widget.Button
            android:id="@+id/button_chef"
            android:layout_width="250dp"
            android:layout_height="wrap_content"

            android:layout_margin="32dp"

            android:background="@drawable/background_button_main"
            android:drawableEnd="@drawable/ic_arrow_forward"
            android:fontFamily="@font/sf_compact_rounded"
            android:paddingStart="36dp"
            android:paddingTop="16dp"

            android:paddingEnd="32dp"
            android:paddingBottom="13dp"
            android:text="chef"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <android.widget.Button
            android:id="@+id/button_cameriere"
            android:layout_width="250dp"
            android:layout_height="wrap_content"

            android:layout_margin="32dp"

            android:background="@drawable/background_button_main"
            android:drawableEnd="@drawable/ic_arrow_forward"
            android:fontFamily="@font/sf_compact_rounded"
            android:paddingStart="36dp"
            android:paddingTop="16dp"

            android:paddingEnd="32dp"
            android:paddingBottom="13dp"
            android:text="Cameriere"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

    <ImageView
        android:id="@+id/image_view_logo"

        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@mipmap/ratatouille"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>